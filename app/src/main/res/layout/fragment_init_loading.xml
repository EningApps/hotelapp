<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#c3000000"
        android:layout_height="match_parent">

    <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/loadingStatusTextView"
            app:layout_constraintVertical_bias="0.94"/>
    <TextView
            android:id="@+id/loadingStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Инициализация ресурсов"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginBottom="224dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.504"/>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/completeLottieView"
            android:layout_width="200dp"
            android:visibility="gone"
            android:layout_height="200dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            app:lottie_rawRes="@raw/confetti"
            app:lottie_autoPlay="false"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>