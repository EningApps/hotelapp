<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/card_mar_side"
        android:layout_marginLeft="@dimen/card_mar_side"
        android:layout_marginTop="@dimen/card_margin_above"
        android:layout_marginBottom="@dimen/card_margin_above">

    <android.support.v7.widget.CardView
            app:cardCornerRadius="@dimen/card_corners"
            android:background="@color/white"
            android:elevation="@dimen/card_elevation"
            android:layout_marginBottom="@dimen/card_margin_inside"
            android:layout_marginLeft="@dimen/card_margin_inside_sides"
            android:layout_marginRight="@dimen/card_margin_inside_sides"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <RelativeLayout android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/title_text_margin"
                            android:layout_gravity="center"
                            android:layout_height="match_parent">

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/title_text_size"
                          android:textStyle="bold"
                          android:layout_centerInParent="true"
                          android:layout_margin="@dimen/title_text_margin"
                          android:id="@+id/lightTitle"
                          android:fontFamily="sans-serif"
                          android:text="Освещение"/>

                <ImageView android:layout_width="24dp"
                           android:layout_height="24dp"
                           android:layout_centerVertical="true"
                           android:layout_toRightOf="@+id/lightTitle"
                           android:src="@drawable/light"/>
            </RelativeLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:text="Гостинная"
                        android:lines="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <com.eningapps.hotelisto.view.LightVolumeImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="16dp"
                        android:layout_gravity="right|center_vertical"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:text="Кухня"
                        android:lines="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <com.eningapps.hotelisto.view.LightVolumeImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="16dp"
                        android:layout_gravity="right|center_vertical"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
            </FrameLayout>

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:text="Комната №1"
                        android:lines="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <com.eningapps.hotelisto.view.LightVolumeImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="16dp"
                        android:layout_gravity="right|center_vertical"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
            </FrameLayout>


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="170dp"
                        android:layout_height="match_parent"
                        android:text="Комната №2"
                        android:lines="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textSize="16sp"
                        android:layout_marginLeft="16dp" android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <com.eningapps.hotelisto.view.LightVolumeImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_margin="16dp"
                        android:layout_gravity="right|center_vertical"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/addLightActionBtn"
            android:layout_width="@dimen/fab_size"
            android:layout_gravity="bottom|right"
            app:fabCustomSize="@dimen/fab_size"
            android:layout_margin="@dimen/fab_margin"
            android:layout_height="@dimen/fab_size"
            android:elevation="@dimen/fab_elevation"
            android:translationZ="@dimen/fab_trans_z"
            android:backgroundTint="@color/main_gold"
            app:srcCompat="@drawable/icon_plus"/>
</FrameLayout>